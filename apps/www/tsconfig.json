{
  "include": ["env.d.ts", ".react-router/types/**/*", "**/*.ts", "**/*.tsx", "vite.config.ts", "cloudflare/**/*", "workers/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@rippingyard/resources/*": ["../../packages/resources/*"]
    },

    "types": [
      "@react-router/node",
      "vite/client",
      "node"
    ],
    "rootDirs": [".", "./.react-router/types"],

    "checkJs": true,

    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
