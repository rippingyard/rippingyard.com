{
  "name": "functions",
  "version": "0.0.2",
  "description": "",
  "author": "",
  "private": true,
  "main": "dist/main.js",
  "license": "UNLICENSED",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "dev": "dotenv -e ../../env/emulator -- tsc --watch",
    "dev:emulator": "dotenv -e ../../env/emulator -- firebase emulators:start --inspect-functions 9229",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "serve": "pnpm build && firebase emulators:start --inspect-functions 9229",
    "deploy": "firebase deploy --only functions",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main",
    "start:dev": "tsc --watch",
    "start:debug": "node --inspect-brk dist/main",
    "start:prod": "node dist/main",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "@rippingyard/schemas": "file:../../packages/schemas",
    "@rippingyard/utils": "file:../../packages/utils",
    "algoliasearch": "^4.23.3",
    "axios": "^1.13.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.12",
    "dompurify": "^3.2.3",
    "firebase": "^10.12.5",
    "firebase-admin": "^12.3.1",
    "firebase-functions": "^6.5.0",
    "hono": "^4.9.4",
    "html-metadata": "^1.7.1",
    "isomorphic-dompurify": "^2.2.0",
    "joi": "^17.6.0",
    "jsdom": "^25.0.1",
    "json-cyclic": "^1.0.2",
    "oembed-parser": "^3.0.0-rc5",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.2.0",
    "url-parse": "^1.5.10"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.12",
    "@types/node": "^24.7.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
