{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM",
      "WebWorker",
      "WebWorker.ImportScripts"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "types"
    ],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@types/jest",
      "@nuxt/types",
      "@nuxtjs/sentry",
      "@nuxtjs/firebase"
    ]
  },
  "exclude": [
    "*.config.js",
    "node_modules",
    ".nuxt",
    "dist",
    "firebase-messaging-sw.js",
    "fcm.js"
  ]
}