{
  "firestore": {
    "rules": "apps/emulator/config/firestore.rules",
    "indexes": "apps/emulator/config/firestore.indexes.json"
  },
  "functions": [
    {
      "source": "apps/functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "storage": {
    "rules": "apps/emulator/config/storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    },
    "hosting": {
      "enabled": false,
      "port": 5555
    },
    "pubsub": {
      "port": 8085
    },
    "singleProjectMode": true
  }
}
